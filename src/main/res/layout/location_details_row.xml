<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageview_places_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iV_location_banner"
        android:layout_width="350dp"
        android:layout_height="281dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/iV_ic_google_marker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_placeDetailName"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tV_places_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/Description"
        android:textColor="@android:color/black"
        android:background="#3A40B2E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iV_location_banner"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/tV_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3A40B2E6"
        android:padding="10dp"
        android:text="@string/latitude"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_places_comments"
        app:layout_constraintVertical_bias="0.278" />

    <TextView
        android:id="@+id/tV_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3A40B2E6"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="@string/longitude"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_latitude" />

    <TextView
        android:id="@+id/tV_placeDetailName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#3A40B2E6"


        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:padding="10dp"
        android:text="@string/textview"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <ImageView
        android:id="@+id/iV_ic_google_marker"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/tV_placeDetailName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/ic_map_marker_google" />
</androidx.constraintlayout.widget.ConstraintLayout>
